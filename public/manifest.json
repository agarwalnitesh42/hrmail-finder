{
  "manifest_version": 3,
  "name": "HRMail Finder",
  "version": "1.0.1",
  "description": "Reveal HR emails on LinkedIn jobs",
  "permissions": ["activeTab", "storage"],
  "content_scripts": [
    {
      "matches": ["*://*.linkedin.com/jobs/*"],
      "js": ["./content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["static/js/*"],
      "matches": ["*://*.linkedin.com/*"]
    }
  ]
}