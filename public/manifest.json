{
  "manifest_version": 3,
  "name": "HRMail Finder",
  "version": "1.0.1",
  "description": "Reveal HR emails on LinkedIn jobs",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "HrEmailFinderChromeExtensionIcon.png",
      "48": "HrEmailFinderChromeExtensionIcon.png",
      "128": "HrEmailFinderChromeExtensionIcon.png"
    }
  },
  "permissions": ["activeTab", "storage", "scripting"],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "http://localhost:3000/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.linkedin.com/jobs/*"],
      "js": ["./content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["static/js/*"],
      "matches": ["*://*.linkedin.com/*"]
    }
  ],
  "icons": {
    "16": "HrEmailFinderChromeExtensionIcon.png",
    "48": "HrEmailFinderChromeExtensionIcon.png",
    "128": "HrEmailFinderChromeExtensionIcon.png"
  }
}